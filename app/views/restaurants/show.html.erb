<%= render "shared/navbar", restaurant: @restaurant %>
<div class="container py-3">
 <div class="card">
   <div class="card-body">
     <div class="d-flex justify-content-between">
        <div>
          <h1><%= @restaurant.name %></h1>
          <p><%= @restaurant.address %></p>
        </div>
        <h3>Phone Number: <%= @restaurant.phone_number %></h3>
     </div>
     <div class="d-inline">
      <h3>Category:</h3>
      <p><%= @restaurant.category %></p>
     </div>
     <div>
       <h2>Reviews</h2>
       <br>
       <% @restaurant.reviews.each do |review| %>
         <h4><%= review.rating %></h4>
         <p><%= review.content %></p>
       <% end %>
     </div>
     <div>
       <%= link_to "Write a review", new_restaurant_review_path(@restaurant) %>
     </div>
   </div>
 </div>
</div>
